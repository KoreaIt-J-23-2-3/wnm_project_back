<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woofnmeow.wnm_project_back.repository.AnnouncementMapper">

    <insert id="addAnnouncement" parameterType="com.woofnmeow.wnm_project_back.dto.request.AddAnnouncementReqDto">
        insert into
            announcement_tb
        values(0, #{title}, #{content}, #{type}, 0, now())
    </insert>

    <select id="getAllAnnouncement" resultType="com.woofnmeow.wnm_project_back.entity.Announcement">
        select
            announcement_id,
            title,
            content,
            is_pinned,
            create_date
        from
            announcement_tb
        order by
            is_pinned desc
    </select>

    <select id="getAnnouncementById"
            parameterType="int"
            resultType="com.woofnmeow.wnm_project_back.dto.response.GetAnnouncementByIdRespDto">
        select
            announcement_id,
            title,
            content
        from
            announcement_tb
        where
            announcement_id = #{announcementId}
    </select>

</mapper>